{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],

		// 虽然没用打包器，但 bundler 可以解决 CJS 包的类型导出问题。
		"moduleResolution": "bundler",

		"sourceMap": true,
		"strict": true,
		"skipLibCheck": true,
		"useUnknownInCatchVariables": false,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"packages/*/lib/**/*.ts",
		"packages/*/bin/**/*.ts",
		"packages/*/__perfs__/**/*.ts"
	]
}

{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"sourceMap": true,
		"strict": true,
		"newLine": "LF",
		"esModuleInterop": true,
		"removeComments": true,
	},
	"include": [
		"packages/*/lib/**/*.ts",
		"packages/*/__perfs__/**/*.ts",
		"packages/*/__tests__/**/*.ts"
	]
}

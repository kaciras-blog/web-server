{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"sourceMap": true,
		"strict": true,
		"skipLibCheck": true,
		"useUnknownInCatchVariables": false,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"packages/*/lib/**/*.ts",
		"packages/*/__perfs__/**/*.ts"
	]
}

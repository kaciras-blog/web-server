{
	"compilerOptions": {
		"target": "ES2019",
		"lib": ["ESNext"],
		"module": "CommonJS",
		"moduleResolution": "Node",

		"strict": true,
		"newLine": "LF",

		// 输出到其他目录会导致另外的包引用不到
		// "outDir": "dist",

		"esModuleInterop": true,
		"removeComments": true,
		"sourceMap": true,
		"experimentalDecorators": true
	},
	"include": [
		"packages/*/lib/**/*.ts",
		"packages/*/__perfs__/**/*.ts",
		"packages/*/__tests__/**/*.ts"
	]
}
